body {
  font-family: "animeace";
}
@font-face {
  font-family: "steampunk";
  src: url('steampunk.ttf');
}
@font-face {
  font-family: "animeace";
  src: url('animeace.ttf');
}
header {
  font-family: "animeace";
  font-size: 1.5em;
  text-align: center;
}
.blue {
  background-color: #2E9AFE;
  color: white;
  font-size: 1.2em;
  margin-left: -25px;
  margin-right: -15px;
  padding-left: 2%;
  padding-bottom: 1%;
}
.blue code {
  background-color: white;
  color: black;
  border-radius: 3px;
  font-family: "animeace";
  font-weight: bold;
  font-style: italic;
}
.reverse {
  font-size: 1.2em;
  padding-bottom: 1%;
}
.reverse code {
  background-color: #2E9AFE;
  color: white;
  border-radius: 3px;
  font-family: "animeace";
  font-weight: bold;
  font-style: italic;
}
footer {
  text-align: right;
}
